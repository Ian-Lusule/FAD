# Flask configuration
SECRET_KEY=replace-with-a-secret-key
FLASK_ENV=development
FLASK_DEBUG=1

# SMTP / Email configuration
# Replace the placeholders below with your provider values.
MAIL_SERVER=mail.shule.com
MAIL_PORT=465
MAIL_USERNAME=info@shule.com
# NOTE: Do NOT commit real passwords. Use a secure secret manager in production.
MAIL_PASSWORD=Strong_PassWD
MAIL_DEFAULT_SENDER=info@shule.com
# Booleans: set to True/False
MAIL_USE_TLS=False
MAIL_USE_SSL=True

# Application defaults
MAX_REVIEWS_DEFAULT=200
DEFAULT_FRAUD_THRESHOLD=30.0
DEFAULT_COUNTRY=ke

# Optional overrides
# Uncomment/modify as needed
#FLASK_RUN_HOST=0.0.0.0
#FLASK_RUN_PORT=5000
